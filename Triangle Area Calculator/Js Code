 function calculateArea(){           let A=parseInt(document.getElementById('sideA').value);     let B=parseInt(document.getElementById('sideB').value);     let C=parseInt(document.getElementById('sideC').value);        if((A+B)>C && (A+C)>B && (B+C)>A ){            let s=(A+B+C)/2;     let res=Math.sqrt(s*(s-A)*(s-B)*(s-C));     res=res.toFixed(2);     document.getElementById('result').textContent=res;         }     else{   document.getElementById('result').textContent="Invalid triangle. Please enter valid side lengths.";     } }    
